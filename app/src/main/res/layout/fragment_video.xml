<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.VideoFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="#03A9F4"
               android:translationZ="1dp"
               />
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="200dp"
               app:cardCornerRadius="30dp"
               android:layout_gravity="bottom"
               android:translationZ="3dp"
               />
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_gravity="bottom"
               android:translationZ="5dp"
               android:src="@color/white"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:translationZ="7dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   >
                   <ImageButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/icon_add"
                       android:layout_marginLeft="20dp"
                       android:backgroundTint="#03A9F4"
                       android:layout_gravity="center_vertical"

                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Shot Video"
                       android:textStyle="bold"
                       android:textSize="20dp"
                       android:textColor="@color/white"
                       android:layout_weight="1"
                       android:layout_gravity="center_vertical"
                       android:gravity="center_horizontal|center_vertical"/>
                   <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/more_btn"
                   android:backgroundTint="#03A9F4"
                       android:layout_marginRight="20dp"
                       android:layout_gravity="center_vertical"

                       />
               </LinearLayout>

               <LinearLayout
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="20dp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Welcome back !"
                       android:textColor="@color/white"
                       android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/user_name_shotprofile"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                       android:text="Lam Hong"
                        android:textStyle="bold"
                       android:textColor="@color/white"
                       android:textSize="32dp"/>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="30dp"

                      >
                      <FrameLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"

                          >
                          <androidx.cardview.widget.CardView
                              android:layout_gravity="center"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              app:cardCornerRadius="15dp"
                              android:translationZ="1dp"
                              >
                              <ImageView
                                  android:layout_width="85dp"
                                  android:layout_height="85dp"
                                  android:src="@color/white"
                                  android:scaleType="centerCrop"
                                  />

                          </androidx.cardview.widget.CardView>
                          <androidx.cardview.widget.CardView
                              android:layout_gravity="center"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              app:cardCornerRadius="15dp"
                              android:translationZ="2dp"
                              >
                              <ImageView
                                  android:id="@+id/avatar_shotprofile"
                                  android:layout_width="80dp"
                                  android:layout_height="80dp"
                                  android:src="@drawable/cty"
                                  android:scaleType="centerCrop"
                                  />

                          </androidx.cardview.widget.CardView>
                      </FrameLayout>
                      <androidx.cardview.widget.CardView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:cardCornerRadius="23dip"
                          android:layout_marginLeft="15dp"

                          android:layout_marginTop="50dp"
                          android:layout_marginBottom="10dp"
                          app:cardElevation="5dp"
                          >
                          <androidx.appcompat.widget.AppCompatButton
                              android:id="@+id/btn_videocuatoi"
                              android:layout_width="110dp"
                              android:layout_height="35dp"
                              android:text="video của tôi"
                              android:textColor="#03A9F4"
                              android:textSize="10dp"
                              android:textStyle="bold"
                              android:background="@drawable/custom_button_whi"
                              android:layout_gravity="center"
                              android:layout_weight="1"
                              />
                      </androidx.cardview.widget.CardView>

                      <androidx.cardview.widget.CardView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:cardCornerRadius="23dip"
                          android:layout_marginLeft="15dp"

                          android:layout_marginTop="50dp"
                          android:layout_marginBottom="10dp"
                          app:cardElevation="5dp"
                          >
                          <androidx.appcompat.widget.AppCompatButton
                              android:id="@+id/btn_addVideo"
                              android:layout_width="110dp"
                              android:layout_height="35dp"
                              android:text="thêm video"
                              android:textColor="@color/white"
                              android:textSize="10dp"
                              android:textStyle="bold"
                              android:background="@drawable/custom_btn_whi_blue"
                              android:layout_gravity="center"
                              android:layout_weight="1"
                              />
                      </androidx.cardview.widget.CardView>
<!--                     <RelativeLayout-->
<!--                         android:layout_width="match_parent"-->
<!--                         android:layout_height="wrap_content"-->
<!--                         >-->
<!--                         <androidx.appcompat.widget.AppCompatImageButton-->
<!--                             android:id="@+id/btn_themshotVideo"-->
<!--                             android:layout_width="40dp"-->
<!--                             android:layout_height="40dp"-->
<!--                             android:src="@drawable/addbtn"-->
<!--                             android:scaleType="centerInside"-->
<!--                             android:background="@color/white"-->
<!--                             android:layout_marginTop="48dp"-->

<!--                             />-->
<!--                     </RelativeLayout>-->


                  </LinearLayout>




               </LinearLayout>

               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:orientation="horizontal"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:padding="1dp"
                   >
                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="15dp"
                       android:layout_weight="1"
                       android:backgroundTint="@color/white"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginTop="35dp"
                       android:layout_marginBottom="35dp"
                       app:cardElevation="20dp"
                       android:outlineSpotShadowColor="#8C8C8C"

                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">
                           <TextView
                               android:id="@+id/numvideo_shotprofile"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="32"
                               android:layout_gravity="center"
                               android:layout_marginTop="12dp"
                               android:textStyle="bold"
                               android:textSize="18dp"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Video"
                               android:layout_gravity="center"
                               android:textStyle="normal"
                               android:layout_marginTop="3dp"
                               android:textColor="#C5C5C5"
                               android:textSize="13dp"
                               />
                       </LinearLayout>
                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="15dp"
                       android:layout_weight="1"
                       android:backgroundTint="@color/white"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginTop="35dp"
                       android:layout_marginBottom="35dp"
                       app:cardElevation="20dp"
                       android:outlineSpotShadowColor="#8C8C8C"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">
                           <TextView
                               android:id="@+id/numFollower_shotprofile"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="32"
                               android:layout_gravity="center"
                               android:layout_marginTop="12dp"
                               android:textStyle="bold"
                               android:textSize="18dp"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Follower"
                               android:layout_gravity="center"
                               android:textStyle="normal"
                               android:layout_marginTop="3dp"
                               android:textColor="#C5C5C5"
                               android:textSize="13dp"
                               />
                       </LinearLayout>
                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="15dp"
                       android:layout_weight="1"
                       android:backgroundTint="@color/white"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginTop="35dp"
                       android:layout_marginBottom="35dp"
                       app:cardElevation="20dp"
                       android:outlineSpotShadowColor="#8C8C8C"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">
                           <TextView
                               android:id="@+id/numFollowinng_shotprofile"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="32"
                               android:layout_gravity="center"
                               android:layout_marginTop="12dp"
                               android:textStyle="bold"
                               android:textSize="18dp"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Following"
                               android:layout_gravity="center"
                               android:textStyle="normal"
                               android:layout_marginTop="3dp"
                               android:textColor="#C5C5C5"
                               android:textSize="13dp"
                               />
                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Xem video nào "
                       android:textStyle="bold"
                       android:textSize="20dp"
                       android:layout_marginLeft="20dp"
                       android:textColor="#03A9F4"
                       />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="10dp"
                       >
                       <androidx.appcompat.widget.AppCompatButton
                           android:id="@+id/btn_videoHot"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="160dp"
                           android:layout_height="100dp"
                           android:text="Video hot "
                           android:textColor="@color/white"
                           android:textSize="15dp"
                           android:textStyle="bold"
                           android:background="@drawable/custom_button"
                           android:layout_gravity="center"
                           android:layout_weight="1"
                           />
                       <androidx.appcompat.widget.AppCompatButton
                           android:id="@+id/btn_videoFollow"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="160dp"
                           android:layout_height="100dp"
                           android:textColor="@color/white"
                           android:text="video follow "
                           android:textSize="15dp"
                           android:textStyle="bold"
                           android:background="@drawable/custom_button1"
                           android:layout_gravity="center"
                           android:layout_weight="1"

                           />
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>

       </FrameLayout>
   </LinearLayout>
</FrameLayout>