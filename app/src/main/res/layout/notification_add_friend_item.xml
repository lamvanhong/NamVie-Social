<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal"
    app:cardCornerRadius="20dp"
    android:padding="8dp"
    app:cardElevation="1dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cty"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/avatar_innotifi"/>
   <LinearLayout
       android:layout_marginLeft="80dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <LinearLayout
           android:layout_marginTop="6dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/avatar_innotifi"
           android:id="@+id/container_right"
           android:layout_marginLeft="10dp"
           android:orientation="horizontal"
           >
           <TextView
               android:id="@+id/userName_innotifi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tớ là Lâm Hồng"
               android:textStyle="bold"
               android:textSize="18dp"
               />

           <TextView
               android:id="@+id/content_innotifi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="đã gửi lời mời kết bạn"
               android:textSize="15dp" />



       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <LinearLayout
               android:layout_marginBottom="5dp"
               android:id="@+id/confirmContainer"
               android:layout_marginTop="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               >
               <androidx.cardview.widget.CardView
                   android:layout_marginLeft="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="35dp"
                   app:cardCornerRadius="20dp"
                   app:cardElevation="3dp"
                   >
                   <androidx.appcompat.widget.AppCompatButton
                       android:textColor="@color/white"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="#42C648"
                       android:text="Chấp nhận"
                       android:id="@+id/btn_chapNhan"
                       android:textSize="10dp"
                       />
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:layout_marginLeft="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="35dp"
                   app:cardCornerRadius="20dp"
                   app:cardElevation="3dp"
                   >
                   <androidx.appcompat.widget.AppCompatButton
                       android:textColor="@color/white"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="#82A5C1"
                       android:text="Từ chối"
                       android:id="@+id/btn_tuChoi"
                       android:textSize="10dp"
                       />
               </androidx.cardview.widget.CardView>



           </LinearLayout>
           <LinearLayout
               android:layout_marginLeft="13dp"
               android:layout_marginTop="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Đã xác nhận"
                   android:id="@+id/statusConfirm"/>
           </LinearLayout>

       </LinearLayout>
   </LinearLayout>


</androidx.cardview.widget.CardView>