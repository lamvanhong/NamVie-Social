<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/asset_1"
                android:layout_width="800dp"
                android:layout_height="wrap_content"
                android:src="@drawable/login_asset1"
                android:layout_marginTop="-500dp"
                />

            <TextView
                android:id="@+id/txt_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to MyBook"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/asset_1"
                android:layout_marginTop="-250dp"
                android:alpha="0.9"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_welcome"
                android:layout_marginTop="20dp"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/email_field"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txt_input_email"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:inputType="textEmailAddress"
                        android:hint="Email"
                        android:maxLines="1"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:theme="@style/MyEditTextTheme"

                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/password_field"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/email_field"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txt_input_password"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:maxLines="1"
                        android:background="@color/white"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password_field"
                    android:text="Forgot password"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="-35dp"
                    />
                <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:id="@+id/btnLogin"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/password_field"
                    android:layout_marginTop="60dp"
                    android:layout_centerHorizontal="true"
                    android:text="Sign in"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:theme="@style/loginButton"
                    app:initialCornerAngle="30dp"
                    android:elevation="35dp"
                    />
                <RelativeLayout
                    android:id="@+id/tv_newuser_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/btnLogin"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:id="@+id/tv_newuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New User? "
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="0dp"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txt_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up"
                        android:layout_toRightOf="@+id/tv_newuser"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="#F64444"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/container_orloginwith"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_newuser_signup"
                    android:layout_marginTop="60dp"
                    android:layout_centerHorizontal="true"
                >
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_orloginwith"
                        android:gravity="center"
                        >
                        <View

                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="2"
                            android:background="@color/black"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_weight="6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Or sign in with"
                            android:textAlignment="center"
                            />
                        <View

                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="2"
                            android:background="@color/black"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/container_orloginwith">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btngg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/icon_gg1"
                        android:backgroundTint="@color/white"
                        android:elevation="35dp"
                        />
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                       android:id="@+id/btnfb"
                        android:layout_toRightOf="@id/btngg"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_gg1"
                        android:backgroundTint="@color/white"
                        android:elevation="35dp"
                        />
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn3"
                        android:layout_toRightOf="@id/btnfb"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_gg1"
                        android:backgroundTint="@color/white"
                        android:elevation="35dp"
                        />
                </RelativeLayout>


            </RelativeLayout>
            <ImageView
                android:id="@+id/asset_2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/login_asset1"
                android:layout_marginTop="610dp"
                android:layout_marginLeft="350dp"
                android:rotation="180"
                android:alpha="0.2"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>