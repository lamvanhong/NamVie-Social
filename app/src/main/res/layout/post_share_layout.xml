<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_avata_sharing"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/duongtu1"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/user_name_sharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/colorPrimaryDark"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/more_btn"

                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lamvanhong"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:id="@+id/describeShare"/>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:layout_marginLeft="20dp"
          android:elevation="2dp"

          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >

                  <de.hdodenhof.circleimageview.CircleImageView
                      android:id="@+id/user_avatar_shared"
                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="1dp"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:src="@drawable/duongtu1"
                      android:padding="5dp"/>

                  <TextView
                      android:id="@+id/user_name_shared"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="user name"
                      android:textSize="16sp"
                      android:textStyle="bold"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="14dp"
                      android:textColor="@color/colorPrimaryDark"
                      />
              </LinearLayout>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="content"
                  android:textSize="15sp"
                  android:id="@+id/content_inshared"
                  />

              <androidx.cardview.widget.CardView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  app:cardCornerRadius="10dp">

                  <ImageView
                      android:id="@+id/image_content"
                      android:layout_width="match_parent"
                      android:layout_height="200dp"
                      android:scaleType="centerCrop"
                      android:src="@drawable/cty" />
              </androidx.cardview.widget.CardView>


          </LinearLayout>


      </androidx.cardview.widget.CardView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:id="@+id/framlayout_yeuthich"
                android:layout_height="wrap_content">

                <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:theme="@style/likeButton"
                    android:id="@+id/btn_yeuthich"
                    >
                </br.com.simplepass.loadingbutton.customViews.CircularProgressButton>
                <TextView
                    android:id="@+id/tv_thich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thích"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="50dp"
                    android:translationZ="5dp"

                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:id="@+id/framlayout_binhluan"
                android:layout_toRightOf="@+id/framlayout_yeuthich"
                android:layout_height="wrap_content">

                <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shadow_binhluan2"
                    android:id="@+id/btn_binhluan"
                    >
                </br.com.simplepass.loadingbutton.customViews.CircularProgressButton>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationZ="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_binhluan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bình luận"
                        android:textSize="9dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="52dp"
                        android:translationZ="5dp"  />
                    <TextView

                        android:id="@+id/comments"
                        android:layout_toRightOf="@id/tv_binhluan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="22dp"
                        android:textSize="9dp"
                        android:text="(2)"
                        android:textColor="@color/colorPrimary"
                        android:translationZ="4dp"
                        />
                </RelativeLayout>




            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:id="@+id/framlayout_share"
                android:layout_toRightOf="@+id/framlayout_binhluan"
                android:layout_height="wrap_content">

                <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shadow_share2"
                    android:id="@+id/btn_share"
                    >
                </br.com.simplepass.loadingbutton.customViews.CircularProgressButton>
                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bình luận"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="60dp"
                    android:translationZ="5dp"

                    />
            </FrameLayout>



        </RelativeLayout>



        <TextView
            android:id="@+id/numlikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            />









    </LinearLayout>

</androidx.cardview.widget.CardView>