<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00B0D1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#6C4848</item>
        <item name="colorControlActivated">#FF0000</item>
        <item name="colorControlHighlight">#58B5FF</item>
    </style>
    <style name="loginButton">
        <item name="android:background">@drawable/button_background_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="seeFriendBtn">
        <item name="android:background">@drawable/button_seefriends</item>
    </style>
    <!-- home -->
    <style name="likeButton">
        <item name="android:background">@drawable/custombtn_like</item>
        <item name="android:textColor">#2FBBF0</item>
    </style>
    <style name="likeButtonClicked">
        <item name="android:background">@drawable/custombtn_liked</item>
        <item name="android:textColor">#2FBBF0</item>
    </style>
    <style name="addfriendbtn">
        <item name="android:background">@drawable/button_addfriend</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="parentsize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>